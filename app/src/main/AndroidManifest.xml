<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dkatzdev.hackbu2017">

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name_short"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".sendSMS"
            android:label="@string/app_name_short"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Read_Inbox"
            android:label="@string/app_name_short"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Read_Inbox_urgent"
            android:label="@string/app_name_short"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Read_Inbox_important"
            android:label="@string/app_name_short"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Read_Inbox_neutral"
            android:label="@string/app_name_short"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Read_Inbox_unimportant"
            android:label="@string/app_name_short"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Read_Inbox_other"
            android:label="@string/app_name_short"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Read_Inbox_junk"
            android:label="@string/app_name_short"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".priority"
            android:label="@string/app_name_short"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>